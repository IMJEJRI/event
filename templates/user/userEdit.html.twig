{% extends 'base.html.twig' %}

{% block body %}
    <div id="form_user">
    {{ form_start(form) }}
    <div class="row">
        <div class="col col-md-6">
            {{ form_row(form.firstName) }}
        </div>
        <div class="col col-md-6">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col col-md-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col">
            {{ form_row(form.roles) }}
        </div>
    </div>
    {{ form_row(form.save) }}
    {{ form_end(form) }}
    </div>
{% endblock %}

