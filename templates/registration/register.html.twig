{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<form id="form_inscription" method="post">

    <h1 class="h3 mb-3 font-weight-normal">Enregistrez-vous</h1>

      {{ form_start(registrationForm) }}

      {{ form_row(registrationForm.firstName, {'label':'Prénom*', 'attr': {'placeholder': 'Prénom'}})}}
      {{ form_row(registrationForm.lastName, {'label':'Nom*', 'attr': {'placeholder': 'Nom'}})}}
      {{ form_row(registrationForm.email, {'label':'Adresse email*', 'attr': {'placeholder': 'Adresse email ...'}}) }}
{#      {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe*', 'attr': {'placeholder': 'Mot de passe !'}}) }}#}
     {{ form_widget(registrationForm.plainPassword, {label: 'Mot de passe*', 'attr': {'placeholder': 'Mot de passe !'}}) }}
     {{ form_errors(registrationForm.plainPassword, {label: 'Confirmation du mot de passe*', 'attr': {'placeholder': 'Confirmez votre mot de passe !'}}) }}
{#      {{ form_row(registrationForm.confirm_password, {label: 'Confirmation du mot de passe*', 'attr': {'placeholder': 'Confirmez votre mot de passe !'}}) }}#}
      {{ form_row(registrationForm.agreeTerms) }}
    <button type="submit" class="btn mt-3 btn-lg btn-primary">Inscription</button>

      {{ form_end(registrationForm) }}
</form>
{% endblock %}
